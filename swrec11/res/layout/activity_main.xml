<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.lewisswrec.swrec11.MainActivity">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/HelpText"
            android:layout_width="89dp"
            android:layout_height="32dp"
            android:layout_alignStart="@+id/RecordingText"
            android:layout_below="@+id/enterbtn"
            android:layout_marginTop="44dp"
            android:fontFamily="@font/architects_daughter"
            android:text="Help!"
            android:textSize="24sp"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="433dp" />

        <TextView
            android:id="@+id/RecordingText"
            android:layout_width="129dp"
            android:layout_height="39dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/TitleText"
            android:layout_marginLeft="34dp"
            android:layout_marginStart="34dp"
            android:layout_marginTop="78dp"
            android:fontFamily="@font/architects_daughter"
            android:text="Recordings"
            android:textSize="24sp"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="119dp" />

        <TextView
            android:id="@+id/TitleText"
            android:layout_width="388dp"
            android:layout_height="58dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:fontFamily="@font/architects_daughter"
            android:text="Social Media Recorder"
            android:textSize="36sp"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="0dp" />

        <ImageButton
            android:id="@+id/HelpButton"
            android:layout_width="33dp"
            android:layout_height="38dp"
            android:layout_alignTop="@+id/HelpText"
            android:layout_toEndOf="@+id/HelpText"
            android:layout_toRightOf="@+id/HelpText"
            app:srcCompat="@android:drawable/ic_menu_help"
            tools:layout_editor_absoluteX="176dp"
            tools:layout_editor_absoluteY="253dp" />

        <Button
            android:id="@+id/enterbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/RecordingText"
            android:layout_alignBottom="@+id/RecordingText"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="30dp"
            android:layout_toRightOf="@+id/RecordingText"
            android:text="Enter" />
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
